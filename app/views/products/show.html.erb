<% content_for :title, "Showing product" %>

<div class="md:w-2/3 w-full flex flex-col md:flex-row md:items-start gap-6">
  <!-- Texto do Produto -->
  <div class="flex-1">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-bold text-3xl mb-3"><%= @product.title %></h1>
    <p class="text-gray-700 mb-3"><%= @product.description %></p>
    <span class="font-bold text-xl mb-4 block">$<%= @product.price_cents / 100.0 %></span>

    <% if @product.image_url.present? %>
      <img 
        src="<%= @product.image_url %>" 
        alt="<%= @product.title %>" 
        class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 object-cover rounded ml-4 sm:ml-8 md:ml-12"
      >
    <% end %>

    <div class="flex flex-wrap gap-2">
      <%= button_to "Adicionar ao carrinho", add_to_cart_product_path(@product), method: :post, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
      <%= link_to "Editar Produto", edit_product_path(@product), class: "bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200" %>
      <%= link_to "Voltar para Produtos", products_path, class: "bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200" %>
      <%= button_to "Remover Produto", @product, method: :delete, form_class: "inline-block", class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500", data: { turbo_confirm: "Tem certeza?" } %>
    </div>
  </div>

  <!-- Imagem do Produto -->
</div>
