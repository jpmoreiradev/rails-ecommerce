<%= form_with(model: product, local: true, class: "max-w-lg mx-auto bg-white shadow p-6 rounded") do |form| %>
  <% if product.errors.any? %>
    <div class="mb-4">
      <h2 class="text-red-500 font-bold">Erros:</h2>
      <ul class="list-disc list-inside text-red-500">
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block font-medium mb-1" %>
    <%= form.text_field :title, class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-medium mb-1" %>
    <%= form.text_area :description, class: "w-full border rounded p-2", rows: 4 %>
  </div>

  <div class="mb-4">
    <%= form.label :price_cents, "PreÃ§o (em centavos)", class: "block font-medium mb-1" %>
    <%= form.number_field :price_cents, class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :image_url, "URL da Imagem", class: "block font-medium mb-1" %>
    <%= form.text_field :image_url, placeholder: "https://exemplo.com/imagem.jpg", class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
