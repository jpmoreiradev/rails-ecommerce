<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 rounded-3xl shadow-2xl overflow-hidden mb-12">
  <div class="container mx-auto px-8 py-16 md:py-20">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <div class="text-white md:w-2/3 mb-8 md:mb-0">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-4 leading-tight">
          Bem-vindo à nossa loja!
        </h1>
        <p class="text-xl md:text-2xl mb-6 text-blue-100">
          Descubra produtos incríveis com os melhores preços
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#produtos" class="inline-flex items-center px-6 py-3 bg-white text-blue-600 rounded-xl font-semibold hover:bg-gray-100 transition-all shadow-lg transform hover:scale-105">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            Ver produtos
          </a>
          <% unless user_signed_in? %>
            <%= link_to new_user_registration_path, class: "inline-flex items-center px-6 py-3 bg-transparent border-2 border-white text-white rounded-xl font-semibold hover:bg-white hover:text-blue-600 transition-all" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
              Criar conta
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="hidden md:block md:w-1/3">
        <div class="relative">
          <div class="w-64 h-64 bg-white bg-opacity-20 rounded-full absolute -top-10 -right-10 animate-pulse"></div>
          <svg class="w-64 h-64 text-white opacity-90" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Section Header -->
<div id="produtos" class="flex justify-between items-center mb-8">
  <div>
    <h2 class="text-3xl font-bold text-gray-800 mb-2">
      Nossos Produtos
    </h2>
    <p class="text-gray-600">Explore nossa coleção de produtos selecionados</p>
  </div>

  <% if current_user&.admin? %>
    <%= link_to new_product_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-xl font-semibold hover:from-green-700 hover:to-emerald-700 transition-all shadow-lg transform hover:scale-105" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Adicionar Produto
    <% end %>
  <% end %>
</div>

<!-- Products Grid -->
<% if @products.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-12">
    <% @products.each do |product| %>
      <div class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
        <!-- Product Image -->
        <div class="relative overflow-hidden bg-gray-100 h-56">
          <% if product.image_url.present? %>
            <img src="<%= product.image_url %>"
                 alt="<%= product.title %>"
                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
          <% else %>
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>

          <!-- Stock Badge -->
          <% if product.stock && product.stock > 0 %>
            <div class="absolute top-3 right-3 bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
              <%= product.stock %> em estoque
            </div>
          <% else %>
            <div class="absolute top-3 right-3 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
              Esgotado
            </div>
          <% end %>
        </div>

        <!-- Product Info -->
        <div class="p-5">
          <h3 class="text-lg font-bold text-gray-800 mb-2 line-clamp-1 group-hover:text-blue-600 transition-colors">
            <%= product.title %>
          </h3>
          <p class="text-gray-600 text-sm mb-4 line-clamp-2">
            <%= product.description %>
          </p>

          <!-- Price and Action -->
          <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100">
            <div>
              <span class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">
                R$ <%= number_to_currency(product.price_cents / 100.0, unit: '', separator: ',', delimiter: '.') %>
              </span>
            </div>
            <%= link_to product_path(product), class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all font-medium text-sm shadow-md transform hover:scale-105" do %>
              Ver detalhes
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-16">
    <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
    </svg>
    <h3 class="text-xl font-semibold text-gray-600 mb-2">Nenhum produto disponível</h3>
    <p class="text-gray-500">Volte mais tarde para ver novos produtos!</p>
  </div>
<% end %>