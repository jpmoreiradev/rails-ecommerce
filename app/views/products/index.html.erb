<h2 class="text-3xl font-bold mb-6 flex justify-between items-center">
  Produtos
  <%= link_to "Adicionar Produto", new_product_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @products.each do |product| %>
    <div class="bg-white rounded-lg shadow p-4 flex flex-col hover:shadow-lg transition">
      <% if product.image_url.present? %>
        <img src="<%= product.image_url %>" alt="<%= product.title %>" class="h-50 h-50 w-full object-cover rounded mb-4">
      <% else %>
        <div class="h-48 w-full bg-gray-200 rounded mb-4 flex items-center justify-center text-gray-400">Sem imagem</div>
      <% end %>

      <h3 class="text-xl font-semibold mb-2"><%= product.title %></h3>
      <p class="text-gray-600 mb-4 line-clamp-3"><%= product.description %></p>
      <span class="font-bold text-lg mb-4">$<%= product.price_cents / 100.0 %></span>

      <%= link_to "Ver Detalhes", product_path(product), class: "mt-auto bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 text-center" %>
    </div>
  <% end %>
</div>
