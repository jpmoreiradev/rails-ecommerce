<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center bg-gray-50 py-12">
  <div class="w-full max-w-lg bg-white rounded-3xl shadow-2xl p-10">
    <h2 class="text-center text-3xl font-extrabold text-gray-800 mb-8">
      Editar <%= resource_name.to_s.humanize %>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 p-3 bg-yellow-100 border border-yellow-200 text-yellow-800 rounded-lg">Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-6">
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %> <i class="text-xs text-gray-500">(deixe em branco se não quiser mudar)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-xs text-gray-500"><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700 mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium text-gray-700 mb-2" %> <i class="text-xs text-gray-500">(precisamos da sua senha atual para confirmar as mudanças)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div class="actions">
        <%= f.submit "Atualizar", class: "w-full py-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold rounded-xl shadow-lg hover:from-blue-600 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition" %>
      </div>
    <% end %>

    <div class="mt-8 border-t pt-6">
      <h3 class="text-lg font-medium text-gray-800">Cancelar minha conta</h3>
      <p class="mt-2 text-sm text-gray-600">Não está feliz?</p>
      <div class="mt-4">
        <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full py-2 px-4 bg-red-600 text-white font-semibold rounded-xl shadow hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition" %>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "Voltar", :back, class: "text-sm font-medium text-blue-600 hover:underline" %>
    </div>
  </div>
</div>