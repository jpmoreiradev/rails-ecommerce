<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center bg-gray-50 py-12">
  <div class="w-full max-w-lg bg-white rounded-3xl shadow-2xl p-10">
    <h2 class="text-center text-3xl font-extrabold text-gray-800 mb-8">
      Criar uma conta
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <% if resource.errors.any? %>
    <div class="mb-6 text-sm text-red-600 border border-red-200 bg-red-50 rounded-lg p-3">
      <%= resource.errors.full_messages.join(", ") %>
    </div>
    <% end %>

    <div class="mb-6">
      <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @minimum_password_length %>
      <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm mt-1" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm mt-1" %>
    </div>

    <!-- Botões -->
    <div class="space-y-4">
      <!-- Botão principal Criar Conta (gradiente azul) -->
      <%= f.submit "Criar conta",
              class: "w-full py-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold rounded-xl shadow-lg hover:from-blue-600 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition" %>

      <!-- Botão alternativo Registrar (verde) -->
      <%= f.button "Registrar",
              class: "w-full py-3 bg-green-500 text-white font-semibold rounded-xl shadow hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition" %>
    </div>

    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Já tem uma conta?
      <%= link_to "Entre", new_session_path(resource_name),
            class: "text-blue-600 font-medium hover:underline ml-1" %>
    </p>
  </div>
</div>