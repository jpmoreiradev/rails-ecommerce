<div class="mt-6 space-y-4 text-center text-sm">
  <%- if controller_name != 'sessions' %>
    <p>
      <%= link_to "Entrar", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p>
      <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p>
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p>
      <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p>
      <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  <% end %>
</div>