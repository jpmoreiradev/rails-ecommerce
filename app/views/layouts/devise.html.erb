<!DOCTYPE html>
<html>

<head>
  <title>E-commerce - Autenticação</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body class="bg-gradient-to-br from-blue-50 via-white to-indigo-50 min-h-screen font-sans antialiased">

  <!-- Link para voltar à home -->
  <div class="absolute top-6 left-6">
    <%= link_to root_path, class: "inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span class="font-medium">Voltar à loja</span>
    <% end %>
  </div>

  <!-- Logo/Brand no topo -->
  <div class="pt-8 pb-6 text-center">
    <%= link_to root_path, class: "inline-block" do %>
      <h1 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">
        E-commerce
      </h1>
    <% end %>
  </div>

  <!-- Conteúdo principal -->
  <main class="flex items-center justify-center px-4 py-8">
    <%= yield %>
  </main>

</body>

</html>